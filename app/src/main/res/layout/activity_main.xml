<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="">

    <!-- Corrected Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Android Mastery App" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is our Android Mastery App Topics"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/optionsMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options Menu"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/contextMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Context Menu"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/popupMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pop-up Menu"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/imageHandlingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Handling"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/listHandlingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Handling"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/menuHandlingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Handling"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/dataPersistanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Persistence"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/mediaHandlingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media and Animations"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/backgroundTaskButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Background Task"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/CameraGesturesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera and Gestures"
        android:layout_marginTop="10dp"/>

</LinearLayout>